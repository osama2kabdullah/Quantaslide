<div class="main-navbar bg-light shadow-sm sticky-top">
  <div class="top-navbar">
    <div class="container">
      <div class="row">
        <div class="col-md-3 my-auto d-none d-sm-none d-md-block d-lg-block">
          <a class="text-decoration-none text-black" href="{{ routes.root_url }}">
            <h5 style="margin-top: 0.5em;" class="brand-name">{{ shop.name }}</h5>
          </a>
        </div>
        <div class="col-md-5 my-auto">
          <form action="{{ routes.search_url }}" style="margin-top: 1em;" role="search" class="input-group">
            <input
              class="form-control"
              type="search"
              placeholder="Search"
              aria-label="Search"
              name="q"
              required
              value="{{ search.terms | escape }}"
            >
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">
              <i class="fa fa-search"></i>
            </button>
          </form>
        </div>
        <div class="col-md-4 my-auto">
          <ul class="nav justify-content-end">
            <li class="nav-item">
              <a class="nav-link" href="{{ routes.cart_url }}">
                <i class="fa {% if cart.empty? %}p-1{% endif %} fa-shopping-cart"></i>
                {% unless cart.empty? %}
                  ({{ cart.item_count }})
                {% endunless %}
              </a>
            </li>

            {% if customer %}
              <li class="nav-item">
                <a class="nav-link" href="{{ routes.account_url }}"> <i class="fa fa-user"></i> Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ routes.account_logout_url }}"> Log out </a>
              </li>
            {% else %}
              <li class="nav-item">
                <a class="nav-link" href="{{ routes.account_login_url }}"> <i class="fa fa-user"></i> Login</a>
              </li>

              {% if shop.customer_accounts_optional %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ routes.account_register_url }}">
                    <i class="fa fa-user"></i> Registration</a
                  >
                </li>
              {% endif %}
            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <nav class="navbar bg-light navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand d-block d-sm-block d-md-none d-lg-none" href="#"> Funda Ecom </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          {% for link in linklists['main-menu'].links %}
            <li
              class="nav-item"
              {% if link.active %}
                style="font-weight: bolder;"
              {% endif %}
            >
              <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </nav>
</div>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [],
  "blocks": []
}
{% endschema %}
