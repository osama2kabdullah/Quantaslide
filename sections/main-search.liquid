<div class="container mt-5 mb-5">
  <h1 class="mb-4">Search Results</h1>

  <!-- Search Results -->
  <div class="row align-items-center">
    {% for item in search.results %}
      {% if item.object_type == 'article' %}
        <div class="col-md-4 mb-4">
          <div class="card">
            {% if item.image != blank %}
              <a href="{{ item.url }}">
                <img src="{{ item.image | img_url: '350x' }}" class="card-img-top" alt="Blog Image">
              </a>
            {% endif %}
            <div class="card-body">
              <span class="badge bg-secondary mb-2">Blog</span>
              <h5 class="card-title">
                <a href="{{ item.url }}" class="text-decoration-none">{{ item.title }}</a>
              </h5>
              <p class="card-text">{{ item.content | strip_html | truncatewords: 20 | highlight: search.terms }}</p>
            </div>
          </div>
        </div>
      {% elsif item.object_type == 'page' %}
        <div class="col-md-4 mb-4">
          <div class="card">
            {% if item.image != blank %}
              <a href="{{ item.url }}">
                <img src="{{ item.image | img_url: '350x' }}" class="card-img-top" alt="Blog Image">
              </a>
            {% endif %}
            <div class="card-body">
              <span class="badge bg-primary mb-2">Page</span>
              <h5 class="card-title">
                <a href="{{ item.url }}" class="text-decoration-none">{{ item.title }}</a>
              </h5>
              <p class="card-text">{{ item.content | strip_html | truncatewords: 20 | highlight: search.terms }}</p>
            </div>
          </div>
        </div>
      {% elsif item.object_type == 'product' %}
        <div class="col-md-4 mb-4">
          {% include 'product-card', product: item %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Search Results",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "No customization avaible now. will add in future."
    }    
  ]
}
{% endschema %}
