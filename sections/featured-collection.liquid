<section class="py-5 container">
  <h1 class="text-center pb-5">Our Product Items</h1>
  <div class="row">
    {% for product in collections.all.products %}
      <div class="col-sm-4 col-6 border-0">
        <div class="product-card">
          <img src="{{ product.featured_image | img_url: '720x300'}}" alt="">
          <div class="middle d-flex gap-3">
            <button class="btn rounded-full btn-outline-light">
              <i class="fa-solid fa-cart-plus"></i>
            </button>
            <button class="btn rounded-full btn-outline-light">
              <i class="fa-solid fa-heart"></i>
            </button>
            <button data-bs-toggle="modal" data-bs-target="#exampleModal-{{ product.id }}" class="btn rounded-full btn-outline-light">
              <i class="fa-solid fa-eye"></i>
            </button>
          </div>

          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal-{{ product.id }}"
            aria-hidden="true"
            aria-labelledby="exampleModalToggleLabel"
            tabindex="-1"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalToggleLabel">{{ product.title }}</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">{{ product.description }}</div>
              </div>
            </div>
          </div>
        </div>

        <a href="{{ product.url }}">
          <div class="d-flex justify-content-between">
            <h5>{{ product.title }}</h5>
            <p>{{ product.price | money }}</p>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "featured Collection",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "featured Collection"
    }
  ]
}
{% endschema %}
