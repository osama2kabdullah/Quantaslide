{% assign page = section.settings.page %}
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="mb-4">
        <h1 class="mt-4 text-center font-weight-bolder">{{ page.title }}</h1>
      </div>

      <!-- Article Text -->
      <div class="mb-4">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "Page"
    }
  ],
  "presets": [
    {
      "name": "Page"
    }
  ]
}
{% endschema %}
