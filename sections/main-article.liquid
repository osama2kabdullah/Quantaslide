<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'title' %}
            <h1 class="mt-4 text-center font-weight-bolder">{{ article.title }}</h1>
            <div style="width: fit-content;" class="d-flex m-auto gap-2">
              {% if block.settings.show_date %}
                <p class="text-muted text-center">{{ article.published_at | date: '%B %d, %Y' }}</p>
              {% endif %}
              {% if block.settings.show_author %}
                <p class="text-center">{{ article.author }}</p>
              {% endif %}
            </div>

          {% when 'featured-image' %}
            {% if article.image != blank %}
              <div class="rounded overflow-hidden border-curve">
                {{
                  article.image
                  | image_url: width: 1024
                  | image_tag: class: 'img-fluid border-curve', alt: article.title
                }}
              </div>
            {% endif %}

          {% when 'content' %}
            <!-- Article Text -->
            <div class="mb-4 mt-4">
              {{ article.content | raw }}
            </div>

          {% when 'share' %}
            <!-- Share Button -->
            <div class="mb-4">
              <p class="mb-2">Share this article:</p>
              <a
                href="https://www.facebook.com/sharer/sharer.php?u={{ article.url }}"
                class="btn btn-primary me-2"
                target="_blank"
              >
                {% render 'icon-facebook' %} Facebook
              </a>
              <a
                href="https://twitter.com/intent/tweet?url={{ article.url }}"
                class="btn btn-primary me-2"
                target="_blank"
              >
                {% render 'icon-twitter' %} Twitter
              </a>
            </div>
        {% endcase %}
      {% endfor %}

      <!-- Comment Box -->
      <h3 class="mb-3">Comments</h3>

      {% if article.comments_enabled? %}
        {% form 'new_comment', article %}
          {{ form.errors | default_errors }}

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="comment[author]" value="{{ form.author }}">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="comment[email]" value="{{ form.email }}">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea class="form-control" id="comment" name="comment[body]">{{ form.body }}</textarea>
          </div>

          <br>

          <button type="submit" class="btn btn-primary">Post Comment</button>
        {% endform %}
      {% endif %}

      <!-- Comments Section -->
      <div class="mt-4">
        {% paginate article.comments by 10 %}
          {% for comment in article.comments %}
            <div class="card mb-3">
              <div class="card-body">
                <p class="card-text">{{ comment.content }}</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <small class="text-muted">
                      Posted by <strong>{{ comment.author }}</strong>
                    </small>
                  </div>
                  <div>
                    <small class="text-muted">
                      {{ comment.created_at | date: '%B %d, %Y' }}
                    </small>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}

          <!-- Pagination -->
          {% include 'custom-pagination' %}
        {% endpaginate %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Article",
  "class": "section",
  "blocks": [
    {
      "type": "featured-image",
      "name": "Featured Image",
      "limit": 1
    },
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_date",
          "label": "Show Date",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_author",
          "label": "Show Author",
          "default": false
        }
      ],
      "limit": 1
    },
    {
      "type": "share",
      "name": "Share"
    },
    {
      "type": "content",
      "name": "Content",
      "limit": 1
    }
  ],
  "settings": []
}
{% endschema %}
